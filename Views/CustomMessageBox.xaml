<Window x:Class="WpfApp.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mensagem" 
        Height="Auto" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True">

    <!-- Removido Window.Resources que causava erro de sintaxe -->
    <Grid>
        <Rectangle Fill="#000000" Opacity="0.5"/>

        <Border x:Name="MainBorder" 
                Background="White" 
                CornerRadius="16" 
                Margin="20"
                Opacity="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                Opacity="0.4" 
                                BlurRadius="30" 
                                ShadowDepth="0"
                                Direction="0"/>
            </Border.Effect>
           
            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border x:Name="HeaderBorder" 
                            Grid.Row="0" 
                            Background="#2C3E50" 
                            CornerRadius="16,16,0,0" 
                            Padding="30,25">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Width="50" Height="50"
                                    Background="White"
                                    CornerRadius="25"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Center">
                                <TextBlock x:Name="IconText" 
                                          FontSize="28" 
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock x:Name="TitleText" 
                                      Grid.Column="1"
                                      Text="Mensagem" 
                                      FontSize="22" 
                                      FontWeight="Bold" 
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      TextWrapping="Wrap"/>
                        </Grid>
                    </Border>

                    <Rectangle Grid.Row="1" Height="3" Fill="#3498DB" Margin="0"/>
 
                    <ScrollViewer Grid.Row="2" 
                                VerticalScrollBarVisibility="Auto" 
                                MaxHeight="400"
                                Padding="35,30">
                        <TextBlock x:Name="MessageText" 
                                  Text="Mensagem" 
                                  FontSize="16" 
                                  TextWrapping="Wrap"
                                  Foreground="#34495E"
                                  LineHeight="28"
                                  TextAlignment="Left"/>
                    </ScrollViewer>

                    <Border Grid.Row="3" 
                            Background="#F8F9FA" 
                            CornerRadius="0,0,16,16" 
                            Padding="30,20"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,1,0,0">
                        <StackPanel x:Name="ButtonPanel" 
                                   Orientation="Horizontal" 
                                   HorizontalAlignment="Right"/>
                    </Border>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
