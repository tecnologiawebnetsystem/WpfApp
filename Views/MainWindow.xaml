<Window x:Class="WpfApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Sistema de Gestão Profissional" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" x:Name="SidebarColumn"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Melhorado o header com cores profissionais e melhor contraste -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#1E3A5F">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="☰" Width="70" 
                        Style="{StaticResource ToggleMenuButton}"
                        Click="ToggleMenu"
                        FontSize="24"/>

                <TextBlock Grid.Column="1" Text="Gestão Profissional Benner" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center"
                          Margin="20,0,0,0"/>

                <!-- Redesenhado o seletor de formato com cores profissionais -->
                <!-- Removido o Border com ComboBox de seleção de formato -->

                <Button Grid.Column="2" Content="🔔" Width="60" Height="60"
                        Style="{StaticResource ToggleMenuButton}"
                        ToolTip="Notificações"
                        Click="MostrarNotificacoes"
                        FontSize="22"/>

                <!-- Substituindo emoji por ícone Material Design -->
                <Button Grid.Column="3" Width="60" Height="60" 
                        Style="{StaticResource ToggleMenuButton}"
                        Click="AbrirMenuPerfil"
                        Margin="0,0,10,0"
                        ToolTip="Perfil do usuário">
                    <Border Width="40" Height="40" 
                            CornerRadius="20" 
                            Background="#3498DB"
                            BorderBrush="White" 
                            BorderThickness="2">
                        <Border.Effect>
                            <DropShadowEffect Color="#3498DB" Opacity="0.4" BlurRadius="10" ShadowDepth="0"/>
                        </Border.Effect>
                        <TextBlock Text="👤" FontSize="20" 
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                </Button>
            </Grid>
        </Border>

        <!-- Melhorado o modal de perfil com cores profissionais -->
        <Border x:Name="ModalPerfil" 
                Grid.Row="0" Grid.RowSpan="3" Grid.ColumnSpan="2"
                Background="#80000000" 
                Visibility="Collapsed"
                MouseDown="FecharModalPerfil">
            <Border Background="White" 
                    Width="320" Height="280"
                    CornerRadius="12"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0,80,20,0"
                    MouseDown="PrevenirFechamento">
                <Border.Effect>
                    <DropShadowEffect Color="#000" Opacity="0.3" BlurRadius="25" ShadowDepth="8"/>
                </Border.Effect>

                <StackPanel Margin="25">
                    <!-- Substituindo emoji por ícone Material Design no perfil -->
                    <Border Width="90" Height="90" 
                            CornerRadius="45" 
                            Background="#3498DB"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,20">
                        <Border.Effect>
                            <DropShadowEffect Color="#3498DB" Opacity="0.4" BlurRadius="15" ShadowDepth="0"/>
                        </Border.Effect>
                        <TextBlock Text="👤" FontSize="48" 
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock Text="Administrador" 
                              FontSize="22" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              Foreground="#2C3E50"
                              Margin="0,0,0,5"/>
                    
                    <TextBlock Text="admin@sistema.com" 
                              FontSize="13" 
                              HorizontalAlignment="Center"
                              Foreground="#7F8C8D"
                              Margin="0,0,0,25"/>
                    
                    <Separator Margin="0,0,0,15" Background="#ECF0F1"/>
                    
                    <!-- Adicionando ícones Material Design nos botões do menu perfil -->
                    <Button Click="AbrirPerfil"
                            Style="{StaticResource MenuButton}"
                            HorizontalContentAlignment="Left"
                            Margin="0,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Meu Perfil"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Click="SairDoSistema"
                            Style="{StaticResource MenuButton}"
                            HorizontalContentAlignment="Left"
                            Margin="0,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#E74C3C">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🚪" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Sair do Sistema"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Border>

        <!-- Melhorando visibilidade do texto MENU e adicionando botão Home -->
        <Border Grid.Row="1" Grid.Column="0" x:Name="Sidebar"
                Background="{StaticResource SidebarBg}" Width="250">
            <StackPanel>
                <!-- Removido o TextBlock com texto "MENU" -->
                
                <!-- Novo botão Home para voltar ao Dashboard -->
                <!-- Corrigindo evento Click para usar a assinatura correta -->
                <Button Style="{StaticResource MenuButton}" Click="VoltarDashboard_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🏠" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Home"/>
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource MenuButton}" Click="AbrirPessoas">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👥" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Pessoas" x:Name="MenuText1"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButton}" Click="AbrirProdutos">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📦" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Produtos" x:Name="MenuText2"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource MenuButton}" Click="AbrirPedidos">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🛒" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Pedidos" x:Name="MenuText5"/>
                    </StackPanel>
                </Button>

                <Separator Margin="10,20" Background="#2A3F5F"/>

                <Button Style="{StaticResource MenuButton}" Click="Sair">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🚪" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Sair" x:Name="MenuText4"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Substituindo área de conteúdo por TabControl -->
        <Border Grid.Row="1" Grid.Column="1" Background="{StaticResource ContentBg}">
            <TabControl x:Name="MainTabControl" 
                       Margin="0" 
                       Background="Transparent"
                       BorderThickness="0"
                       SelectionChanged="MainTabControl_SelectionChanged">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" 
                                           Background="White" 
                                           BorderBrush="#BDC3C7" 
                                           BorderThickness="1,1,1,0" 
                                           CornerRadius="8,8,0,0"
                                           Margin="2,0,0,0"
                                           Padding="15,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <ContentPresenter Grid.Column="0"
                                                            x:Name="ContentSite"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Left"
                                                            ContentSource="Header"
                                                            Margin="0,0,10,0"/>
                                            
                                            <!-- Botão fechar aba -->
                                            <Button Grid.Column="1" 
                                                   Content="✕" 
                                                   Width="20" 
                                                   Height="20"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   Foreground="#7F8C8D"
                                                   Cursor="Hand"
                                                   Click="FecharAba_Click"
                                                   Tag="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                                   ToolTip="Fechar aba">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                           CornerRadius="3"
                                                                           Padding="2">
                                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                                        VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#E74C3C"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="White"/>
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#3498DB"/>
                                            <Setter TargetName="Border" Property="BorderThickness" Value="1,3,1,0"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="#ECF0F1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Foreground" Value="#2C3E50"/>
                    </Style>
                </TabControl.Resources>
                
                <!-- Aba inicial (Dashboard) - não pode ser fechada -->
                <TabItem x:Name="DashboardTab" Header="🏠 Dashboard">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Cabeçalho -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                                <TextBlock Text="Bem-vindo ao Sistema" 
                                          FontSize="36" FontWeight="Bold" 
                                          Foreground="{StaticResource DarkBg}" 
                                          Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Visão geral do sistema de gestão" 
                                          FontSize="16" 
                                          Foreground="#666"/>
                            </StackPanel>

                            <!-- Cards de Estatísticas -->
                            <Grid Grid.Row="1" Margin="0,0,0,40">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Card Pessoas -->
                                <Border Grid.Column="0" Background="White" CornerRadius="12" 
                                       Padding="25" Margin="0,0,15,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000" Opacity="0.08" BlurRadius="15" ShadowDepth="3"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Border Grid.Row="0" Width="60" Height="60" 
                                               Background="#E3F2FD" CornerRadius="30"
                                               HorizontalAlignment="Left" Margin="0,0,0,15">
                                            <TextBlock Text="👥" FontSize="28" 
                                                      Foreground="#2196F3"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Row="1" Margin="0,0,0,10">
                                            <TextBlock Text="Pessoas Cadastradas" 
                                                      FontSize="14" 
                                                      Foreground="#666"
                                                      Margin="0,0,0,5"/>
                                            <TextBlock x:Name="TotalPessoas" 
                                                      Text="0" 
                                                      FontSize="32" 
                                                      FontWeight="Bold"
                                                      Foreground="#2C3E50"/>
                                        </StackPanel>

                                        <Button Grid.Row="2" Content="Ver Detalhes" 
                                               Style="{StaticResource PrimaryButton}"
                                               Click="AbrirPessoas"
                                               HorizontalAlignment="Left"
                                               Padding="15,8"/>
                                    </Grid>
                                </Border>

                                <!-- Card Produtos -->
                                <Border Grid.Column="1" Background="White" CornerRadius="12" 
                                       Padding="25" Margin="7.5,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000" Opacity="0.08" BlurRadius="15" ShadowDepth="3"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Border Grid.Row="0" Width="60" Height="60" 
                                               Background="#FFF3E0" CornerRadius="30"
                                               HorizontalAlignment="Left" Margin="0,0,0,15">
                                            <TextBlock Text="📦" FontSize="28" 
                                                      Foreground="#FF9800"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Row="1" Margin="0,0,0,10">
                                            <TextBlock Text="Produtos Cadastrados" 
                                                      FontSize="14" 
                                                      Foreground="#666"
                                                      Margin="0,0,0,5"/>
                                            <TextBlock x:Name="TotalProdutos" 
                                                      Text="0" 
                                                      FontSize="32" 
                                                      FontWeight="Bold"
                                                      Foreground="#2C3E50"/>
                                        </StackPanel>

                                        <Button Grid.Row="2" Content="Ver Detalhes" 
                                               Style="{StaticResource AccentButton}"
                                               Click="AbrirProdutos"
                                               HorizontalAlignment="Left"
                                               Padding="15,8"/>
                                    </Grid>
                                </Border>

                                <!-- Card Pedidos -->
                                <Border Grid.Column="2" Background="White" CornerRadius="12" 
                                       Padding="25" Margin="15,0,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000" Opacity="0.08" BlurRadius="15" ShadowDepth="3"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Border Grid.Row="0" Width="60" Height="60" 
                                               Background="#E8F5E9" CornerRadius="30"
                                               HorizontalAlignment="Left" Margin="0,0,0,15">
                                            <TextBlock Text="🛒" FontSize="28" 
                                                      Foreground="#4CAF50"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Row="1" Margin="0,0,0,10">
                                            <TextBlock Text="Pedidos Realizados" 
                                                      FontSize="14" 
                                                      Foreground="#666"
                                                      Margin="0,0,0,5"/>
                                            <TextBlock x:Name="TotalPedidos" 
                                                      Text="0" 
                                                      FontSize="32" 
                                                      FontWeight="Bold"
                                                      Foreground="#2C3E50"/>
                                        </StackPanel>

                                        <Button Grid.Row="2" Content="Ver Detalhes" 
                                               Style="{StaticResource SuccessButton}"
                                               Click="AbrirPedidos"
                                               HorizontalAlignment="Left"
                                               Padding="15,8"/>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Seção de Últimos Pedidos -->
                            <Border Grid.Row="2" Background="White" CornerRadius="12" 
                                   Padding="30" Margin="0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000" Opacity="0.08" BlurRadius="15" ShadowDepth="3"/>
                                </Border.Effect>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Cabeçalho da seção -->
                                    <Grid Grid.Row="0" Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <Border Width="40" Height="40" 
                                                   Background="#E8F5E9" CornerRadius="8"
                                                   Margin="0,0,15,0">
                                                <TextBlock Text="🛒" FontSize="20" 
                                                          Foreground="#4CAF50"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="Últimos Pedidos" 
                                                          FontSize="22" FontWeight="Bold" 
                                                          Foreground="#2C3E50"/>
                                                <TextBlock Text="Pedidos mais recentes do sistema" 
                                                          FontSize="13" 
                                                          Foreground="#7F8C8D"
                                                          Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <Button Grid.Column="1" Content="Ver Todos" 
                                               Style="{StaticResource SuccessButton}"
                                               Click="AbrirPedidos"
                                               Padding="15,8"/>
                                    </Grid>

                                    <!-- DataGrid com os pedidos -->
                                    <DataGrid Grid.Row="1" 
                                             x:Name="GridUltimosPedidos"
                                             AutoGenerateColumns="False"
                                             IsReadOnly="True"
                                             SelectionMode="Single"
                                             GridLinesVisibility="None"
                                             HeadersVisibility="Column"
                                             CanUserResizeRows="False"
                                             CanUserReorderColumns="False"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             RowHeight="50"
                                             FontSize="14">
                                        
                                        <DataGrid.Resources>
                                            <!-- Estilo para o cabeçalho -->
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background" Value="#F8F9FA"/>
                                                <Setter Property="Foreground" Value="#2C3E50"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="FontSize" Value="13"/>
                                                <Setter Property="Padding" Value="15,12"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                                <Setter Property="BorderBrush" Value="#E9ECEF"/>
                                            </Style>
                                            
                                            <!-- Estilo para as linhas -->
                                            <Style TargetType="DataGridRow">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                <Setter Property="BorderBrush" Value="#F1F3F5"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F8F9FA"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                            
                                            <!-- Estilo para as células -->
                                            <Style TargetType="DataGridCell">
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Padding" Value="15,0"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="#495057"/>
                                            </Style>
                                        </DataGrid.Resources>

                                        <DataGrid.Columns>
                                            <!-- Coluna ID -->
                                            <DataGridTextColumn Header="Pedido" Binding="{Binding Id}" Width="100">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                        <Setter Property="Foreground" Value="#2C3E50"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <!-- Coluna Cliente -->
                                            <DataGridTextColumn Header="Cliente" Binding="{Binding ClienteNome}" Width="*" MinWidth="200"/>

                                            <!-- Coluna Valor -->
                                            <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat=C}" Width="150">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <!-- Coluna Status -->
                                            <DataGridTemplateColumn Header="Status" Width="150">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Border CornerRadius="12" Padding="10,5" HorizontalAlignment="Center">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Pendente">
                                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Em Processamento">
                                                                            <Setter Property="Background" Value="#E3F2FD"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Recebido">
                                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Text="{Binding Status}" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Pendente">
                                                                                <Setter Property="Foreground" Value="#F57C00"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Em Processamento">
                                                                                <Setter Property="Foreground" Value="#1976D2"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Recebido">
                                                                                <Setter Property="Foreground" Value="#388E3C"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Border>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <!-- Coluna Data -->
                                            <DataGridTextColumn Header="Data" Binding="{Binding DataPedido, StringFormat=dd/MM/yyyy}" Width="120">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#6C757D"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Border>

        <!-- Aumentando tamanho do texto do rodapé -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="{StaticResource DarkBg}">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="1"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          FontSize="15"
                          FontWeight="Bold">
                    <Run Text="www.benner.com.br" Foreground="White"/>
                    <Run Text="     |     " Foreground="White"/>
                    <Run Text="LinkedIn: /companyuniversobenner" Foreground="White"/>
                    <Run Text="     |     " Foreground="White"/>
                    <Run Text="Instagram: /companyuniversobenner" Foreground="White"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
