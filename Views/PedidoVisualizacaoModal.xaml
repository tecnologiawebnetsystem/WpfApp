<Window x:Class="WpfApp.Views.PedidoVisualizacaoModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalhes do Pedido" Height="600" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        ResizeMode="NoResize">

    <Border Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Detalhes do Pedido" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50"/>
                <TextBlock x:Name="txtPedidoId" 
                           FontSize="14" 
                           Foreground="#95A5A6" 
                           Margin="0,5,0,0"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Border Background="White" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="8" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Cliente" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2C3E50" 
                                       Margin="0,0,0,10"/>
                            <TextBlock x:Name="txtNomeCliente" 
                                       FontSize="14" 
                                       Foreground="#34495E"/>
                            <TextBlock x:Name="txtCpfCliente" 
                                       FontSize="12" 
                                       Foreground="#95A5A6" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="8" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Produtos" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2C3E50" 
                                       Margin="0,0,0,10"/>
                            
                            <ItemsControl x:Name="listProdutos">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E0E0E0" 
                                                BorderThickness="0,0,0,1" 
                                                Padding="0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding NomeProduto}" 
                                                           FontSize="14" 
                                                           Foreground="#2C3E50" 
                                                           VerticalAlignment="Center"/>
                                                
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding Quantidade, StringFormat='Qtd: {0}'}" 
                                                           FontSize="14" 
                                                           Foreground="#7F8C8D" 
                                                           Margin="10,0" 
                                                           VerticalAlignment="Center"/>
                                                
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding ValorUnitario, StringFormat='Unit: {0:C}'}" 
                                                           FontSize="14" 
                                                           Foreground="#7F8C8D" 
                                                           Margin="10,0" 
                                                           VerticalAlignment="Center"/>
                                                
                                                <TextBlock Grid.Column="3" 
                                                           Text="{Binding ValorTotal, StringFormat={}{0:C}}" 
                                                           FontSize="14" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="#27AE60" 
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <Border Background="White" 
                            CornerRadius="8" 
                            Padding="20">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="8" ShadowDepth="2"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="Data da Venda" 
                                           FontSize="12" 
                                           Foreground="#95A5A6"/>
                                <TextBlock x:Name="txtDataVenda" 
                                           FontSize="14" 
                                           Foreground="#2C3E50" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,15">
                                <TextBlock Text="Forma de Pagamento" 
                                           FontSize="12" 
                                           Foreground="#95A5A6"/>
                                <TextBlock x:Name="txtFormaPagamento" 
                                           FontSize="14" 
                                           Foreground="#2C3E50" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="Status" 
                                           FontSize="12" 
                                           Foreground="#95A5A6"/>
                                <TextBlock x:Name="txtStatus" 
                                           FontSize="14" 
                                           Foreground="#2C3E50" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,15">
                                <TextBlock Text="Valor Total" 
                                           FontSize="12" 
                                           Foreground="#95A5A6"/>
                                <TextBlock x:Name="txtValorTotal" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Foreground="#27AE60" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <Button Grid.Row="2" 
                    Content="Fechar" 
                    Background="#95A5A6" 
                    Foreground="White" 
                    Padding="30,12" 
                    FontSize="14" 
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,20,0,0"
                    Click="BtnFechar_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>
