<Window x:Class="WpfApp.Views.PedidosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciamento de Pedidos" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style TargetType="Button" x:Key="IconButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

   
        <Border Grid.Row="0" Background="#2C3E50" Padding="30,20">
            <Grid>
                <StackPanel>
                    <TextBlock Text="Gerenciamento de Pedidos" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Visualize e gerencie todos os pedidos do sistema" 
                               FontSize="14" 
                               Foreground="#BDC3C7" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
 
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20">
                
        
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                        Opacity="0.1" 
                                        BlurRadius="10" 
                                        ShadowDepth="2"/>
                    </Border.Effect>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                  
                        <ComboBox x:Name="CmbPesquisaPedido"
                                  Grid.Column="0"
                                  IsEditable="True"
                                  IsTextSearchEnabled="True"
                                  StaysOpenOnEdit="True"
                                  TextSearch.TextPath="Nome"
                                  Margin="0,0,10,0"
                                  VerticalContentAlignment="Center">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Padding" Value="10"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Style>
                            </ComboBox.Style>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Nome}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding CPF}" FontSize="11" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                 
                        <ComboBox x:Name="cmbStatus" 
                                  Grid.Column="1"
                                  Margin="0,0,10,0"
                                  SelectionChanged="CmbStatus_SelectionChanged">
                            <ComboBoxItem Content="Todos os Status" IsSelected="True"/>
                            <ComboBoxItem Content="Pendente"/>
                            <ComboBoxItem Content="Pago"/>
                            <ComboBoxItem Content="Enviado"/>
                            <ComboBoxItem Content="Recebido"/>
                        </ComboBox>
                       
                        <Button Grid.Column="2" 
                                Content="Pesquisar" 
                                Background="#3498DB" 
                                Foreground="White" 
                                Padding="20,10" 
                                FontSize="14" 
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnPesquisar_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="6" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2980B9"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
 
                <TextBlock x:Name="txtContador" 
                           Text="Total de pedidos: 0" 
                           FontSize="14" 
                           Foreground="#7F8C8D" 
                           Margin="0,0,0,15"/>

              
                <ItemsControl x:Name="listPedidos">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    CornerRadius="8" 
                                    Padding="20" 
                                    Margin="0,0,0,15">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" 
                                                    Opacity="0.08" 
                                                    BlurRadius="8" 
                                                    ShadowDepth="2"/>
                                </Border.Effect>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                   
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Id}" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="#3498DB" 
                                               VerticalAlignment="Center"/>

                                
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding NomePessoa}" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#2C3E50"/>
                                        <TextBlock Text="{Binding CpfPessoa}" 
                                                   FontSize="12" 
                                                   Foreground="#95A5A6" 
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                  
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <TextBlock Text="Data da Venda" 
                                                   FontSize="11" 
                                                   Foreground="#95A5A6"/>
                                        <TextBlock Text="{Binding DataVenda, StringFormat='dd/MM/yyyy'}" 
                                                   FontSize="14" 
                                                   Foreground="#2C3E50" 
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                   
                                    <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                        <TextBlock Text="Valor Total" 
                                                   FontSize="11" 
                                                   Foreground="#95A5A6"/>
                                        <TextBlock Text="{Binding ValorTotal, StringFormat='C'}" 
                                                   FontSize="16" 
                                                   FontWeight="Bold" 
                                                   Foreground="#27AE60" 
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    
                                    <StackPanel Grid.Column="4" VerticalAlignment="Center">
                                        <TextBlock Text="Pagamento" 
                                                   FontSize="11" 
                                                   Foreground="#95A5A6"/>
                                        <TextBlock Text="{Binding FormaPagamentoTexto}" 
                                                   FontSize="14" 
                                                   Foreground="#2C3E50" 
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                  
                                    <Border Grid.Column="5" 
                                            Background="{Binding StatusCor}" 
                                            CornerRadius="4" 
                                            Padding="10,5" 
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding StatusTexto}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="White" 
                                                   HorizontalAlignment="Center"/>
                                    </Border>

                                    
                                    <StackPanel Grid.Column="6" 
                                                Orientation="Horizontal" 
                                                VerticalAlignment="Center" 
                                                Margin="10,0,0,0">
                                        
                                     
                                        <Button Style="{StaticResource IconButton}" 
                                                Click="BtnVisualizar_Click"
                                                Tag="{Binding Id}"
                                                ToolTip="Visualizar Pedido">
                                            <TextBlock Text="👁️" FontSize="18" Foreground="#3498DB"/>
                                        </Button>
                                        
                                       
                                        <Button Style="{StaticResource IconButton}" 
                                                Click="BtnEditar_Click"
                                                Tag="{Binding Id}"
                                                ToolTip="Editar Pedido">
                                            <TextBlock Text="✏️" FontSize="18" Foreground="#F39C12"/>
                                        </Button>
                                        
                                        
                                        <Button Style="{StaticResource IconButton}" 
                                                Click="BtnExcluir_Click"
                                                Tag="{Binding Id}"
                                                ToolTip="Excluir Pedido">
                                            <TextBlock Text="🗑️" FontSize="18" Foreground="#E74C3C"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border x:Name="borderSemPedidos" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="40" 
                        Visibility="Collapsed">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                        Opacity="0.08" 
                                        BlurRadius="8" 
                                        ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📦" 
                                   FontSize="48" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Nenhum pedido encontrado" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="#2C3E50" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Tente ajustar os filtros de pesquisa" 
                                   FontSize="14" 
                                   Foreground="#95A5A6" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
