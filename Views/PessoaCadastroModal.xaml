<Window x:Class="WpfApp.Views.PessoaCadastroModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Pessoa" Height="600" Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Formulário de Cadastro -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Dados Pessoais -->
                <GroupBox Header="Dados Pessoais" Margin="0,0,0,15" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Nome *" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="0" 
                                 x:Name="txtNome"
                                 Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="35"
                                 Padding="10,0"
                                 FontSize="13"
                                 Margin="0,25,0,10"/>

                        <TextBlock Grid.Row="1" Text="CPF *" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="1" 
                                 Text="{Binding CPF, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="35"
                                 Padding="10,0"
                                 FontSize="13"
                                 Margin="0,25,0,10"/>

                        <TextBlock Grid.Row="2" Text="Email" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="2" 
                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="35"
                                 Padding="10,0"
                                 FontSize="13"
                                 Margin="0,25,0,10"/>

                        <TextBlock Grid.Row="3" Text="Telefone" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="3" 
                                 Text="{Binding Telefone, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="35"
                                 Padding="10,0"
                                 FontSize="13"
                                 Margin="0,25,0,10"/>

                        <TextBlock Grid.Row="4" Text="Data de Nascimento" Margin="0,0,0,5"/>
                        <DatePicker Grid.Row="4" 
                                    SelectedDate="{Binding DataNascimento, UpdateSourceTrigger=PropertyChanged}" 
                                    Height="35"
                                    FontSize="13"
                                    Margin="0,25,0,0"/>
                    </Grid>
                </GroupBox>

                <!-- Endereço -->
                <GroupBox Header="Endereço" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="CEP" Margin="0,0,0,5"/>
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,25,0,10">
                            <TextBox Text="{Binding CEP, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="150"
                                     Height="35"
                                     Padding="10,0"
                                     FontSize="13"
                                     Margin="0,0,10,0"/>
                            <Button Content="Buscar" 
                                    Width="80" 
                                    Height="35"
                                    Background="#007ACC"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnBuscarCep_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="3">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#005A9E"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Logradouro" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                 Text="{Binding Logradouro, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="35"
                                 Padding="10,0"
                                 FontSize="13"
                                 Margin="0,25,0,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Número" Margin="0,0,5,5"/>
                        <TextBox Grid.Row="2" Grid.Column="0"
                                 Text="{Binding Numero, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="35"
                                 Padding="10,0"
                                 FontSize="13"
                                 Margin="0,25,5,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Complemento" Margin="5,0,0,5"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding Complemento, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="35"
                                 Padding="10,0"
                                 FontSize="13"
                                 Margin="5,25,0,10"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Bairro" Margin="0,0,5,5"/>
                        <TextBox Grid.Row="3" Grid.Column="0"
                                 Text="{Binding Bairro, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="35"
                                 Padding="10,0"
                                 FontSize="13"
                                 Margin="0,25,5,10"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Cidade" Margin="0,0,5,5"/>
                        <TextBox Grid.Row="4" Grid.Column="0"
                                 Text="{Binding Cidade, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="35"
                                 Padding="10,0"
                                 FontSize="13"
                                 Margin="0,25,5,0"/>

                        <TextBlock Grid.Row="4" Grid.Column="1" Text="Estado" Margin="5,0,0,5"/>
                        <TextBox Grid.Row="4" Grid.Column="1"
                                 Text="{Binding Estado, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="35"
                                 Padding="10,0"
                                 FontSize="13"
                                 Margin="5,25,0,0"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Botões de Ação -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0">
            <Button Content="Cancelar" 
                    Width="120" 
                    Height="40"
                    Margin="0,0,10,0"
                    Background="#6C757D"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="BtnCancelar_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A6268"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Content="Salvar" 
                    Width="120" 
                    Height="40"
                    Background="#28A745"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="BtnSalvar_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
