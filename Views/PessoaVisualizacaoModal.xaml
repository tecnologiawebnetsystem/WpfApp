<Window x:Class="WpfApp.Views.PessoaVisualizacaoModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visualizar Pessoa" Height="550" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Dados da Pessoa (Somente Leitura) -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Dados Pessoais -->
                <GroupBox Header="Dados Pessoais" Margin="0,0,0,15" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Id}" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Nome:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Nome}" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="CPF:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CPF}" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Email:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Email}" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Telefone:" FontWeight="Bold"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Telefone}"/>
                    </Grid>
                </GroupBox>

                <!-- Endereço -->
                <GroupBox Header="Endereço" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="CEP:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CEP}" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Logradouro:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Logradouro}" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Número:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Numero}" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Bairro:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Bairro}" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Cidade/UF:" FontWeight="Bold"/>
                        <TextBlock Grid.Row="4" Grid.Column="1">
                            <Run Text="{Binding Cidade}"/>
                            <Run Text=" - "/>
                            <Run Text="{Binding Estado}"/>
                        </TextBlock>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Botão Fechar -->
        <Button Grid.Row="1" 
                Content="Fechar" 
                Width="100" 
                Height="35"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                Background="#6C757D"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                FontSize="14"
                FontWeight="Bold"
                Click="BtnFechar_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5"
                                        Padding="10,5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#5A6268"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
