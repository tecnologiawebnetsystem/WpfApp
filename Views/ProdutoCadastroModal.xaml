<Window x:Class="WpfApp.Views.ProdutoCadastroModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Produto" 
        Height="450" 
        Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F7FA">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Border Grid.Row="0" Background="#27AE60" Padding="20">
            <TextBlock x:Name="TxtTitulo" 
                       Text="Novo Produto" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>


        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20">
  
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Nome do Produto *" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtNome" 
                             Height="40" 
                             FontSize="14" 
                             Padding="10,0"
                             VerticalContentAlignment="Center"
                             Background="White"
                             Foreground="Black"
                             CaretBrush="Black"/>
                </StackPanel>

    
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Código *" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtCodigo" 
                             Height="40" 
                             FontSize="14" 
                             Padding="10,0"
                             VerticalContentAlignment="Center"
                             Background="White"
                             Foreground="Black"
                             CaretBrush="Black"/>
                </StackPanel>

      
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Valor (R$) *" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtValor" 
                             Height="40" 
                             FontSize="14" 
                             Padding="10,0"
                             VerticalContentAlignment="Center"
                             Background="White"
                             Foreground="Black"
                             CaretBrush="Black"/>
                </StackPanel>

                <TextBlock Text="* Campos obrigatórios" 
                           FontSize="11" 
                           Foreground="#E74C3C" 
                           FontStyle="Italic"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>


        <Border Grid.Row="2" Background="White" Padding="20" BorderBrush="#ECF0F1" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar" 
                        Background="#95A5A6" 
                        Foreground="White" 
                        FontSize="14" 
                        FontWeight="SemiBold"
                        Padding="25,10" 
                        BorderThickness="0" 
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Click="BtnCancelar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Salvar" 
                        Background="#27AE60" 
                        Foreground="White" 
                        FontSize="14" 
                        FontWeight="SemiBold"
                        Padding="30,10" 
                        BorderThickness="0" 
                        Cursor="Hand"
                        Click="BtnSalvar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
