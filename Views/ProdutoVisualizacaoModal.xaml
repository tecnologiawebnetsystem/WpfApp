<Window x:Class="WpfApp.Views.ProdutoVisualizacaoModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visualizar Produto" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#3498DB" Padding="20">
            <TextBlock Text="Detalhes do Produto" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20">
             
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="ID" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBlock x:Name="TxtId" FontSize="16" Foreground="#2C3E50" FontWeight="SemiBold"/>
                </StackPanel>

               
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Nome do Produto" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBlock x:Name="TxtNome" FontSize="16" Foreground="#2C3E50" TextWrapping="Wrap"/>
                </StackPanel>
 
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="CÃ³digo" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBlock x:Name="TxtCodigo" FontSize="16" Foreground="#2C3E50"/>
                </StackPanel>

     
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Valor" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBlock x:Name="TxtValor" FontSize="16" Foreground="#27AE60" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

      
        <Border Grid.Row="2" Background="White" Padding="20" BorderBrush="#ECF0F1" BorderThickness="0,1,0,0">
            <Button Content="Fechar" 
                    HorizontalAlignment="Right"
                    Background="#95A5A6" 
                    Foreground="White" 
                    FontSize="14" 
                    FontWeight="SemiBold"
                    Padding="30,10" 
                    BorderThickness="0" 
                    Cursor="Hand"
                    Click="BtnFechar_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Border>
    </Grid>
</Window>
